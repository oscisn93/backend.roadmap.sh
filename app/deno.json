{
  "importMap": "./import_map.json",
  "tasks": {
    "test": "deno test -A",
    "run": "deno run -A ./mod.ts"
    "build": "deno compile -A --include ./tasks.json -o task-cli ./mod.ts"
  },
  "fmt": {
    "options": {
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": false,
      "semiColons": true,
      "useTabs": false
    },
    "files": {
      "exclude": [
        "./lock.json"
      ]
    }
  }
}
